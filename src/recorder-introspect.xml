<?xml version="1.0" ?>
<node name="/org/soma/Recorder">
  <interface name="org.soma.Recorder">
    <method name="CreateFile">
      <arg type="s" name="filename" direction="in"/>
    </method>

    <method name="CloseFile">
    </method>

    <method name="CreateEpoch">
      <arg type="s" name="epochname" direction="in"/>
    </method>

    <method name="SwitchEpoch">
      <arg type="s" name="epochname" direction="in"/>
    </method>
    
    <method name="GetEpoch">
      <arg type="s" name="epochname" direction="out"/>
    </method>

    <method name="EnableDataRX">
      <arg type="i" name="src" direction="in"/>
      <arg type="i" name="typ" direction="in"/>
    </method>


    <method name="DisableDataRX">
      <arg type="i" name="src" direction="in"/>
      <arg type="i" name="typ" direction="in"/>
    </method>

    <method name="StartRecording">
    </method>
    
    <method name="StopRecording">
    </method>
       
    <method name="NetworkStats">
      <arg type="a{ss}" name="networkStats" direction="out"/>
    </method>
    
  </interface>

</node>
